[Unit]
Description=LUMINA AI - 前端和后端服务
After=network.target

[Service]
Type=simple
User=nx
Group=nx
WorkingDirectory=/home/nx/reimagine-photo-0.0.1
ExecStart=/home/nx/reimagine-photo-0.0.1/start.sh
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# 环境变量
Environment=VITE_API_BASE_URL=/api
Environment=API_AUTH_DISABLED=true
Environment=VITE_API_PROXY_TARGET=http://127.0.0.1:8000

[Install]
WantedBy=multi-user.target
